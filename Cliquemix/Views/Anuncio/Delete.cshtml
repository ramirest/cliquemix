@model Cliquemix.Models.tbAnuncio

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>
                    Anúncio
                    <small> Excluir</small>
                </h1>
                @RenderPage("~/Views/Breadcrumbs/Breadcrumbs.cshtml")
            </div>

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.Label("Código", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.aid)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Título do Anúncio", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.tituloAnuncio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("URL do Anúncio", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.url)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Descrição do Anúncio", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.dsAnuncio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Link do Vídeo", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.videoAnuncio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Ramo de Atividade", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.tbRamoAtividade.descricao)
                    </div>
                </div>

            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>