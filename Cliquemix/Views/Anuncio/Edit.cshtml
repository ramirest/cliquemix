@model Cliquemix.Models.tbAnuncio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>
                    Anúncio
                    <small> Editar</small>
                </h1>
                @RenderPage("~/Views/Breadcrumbs/Breadcrumbs.cshtml")
            </div>

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.Label("Título do Anúncio", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tituloAnuncio)
                        @Html.ValidationMessageFor(model => model.tituloAnuncio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("URL do Anúncio", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.url)
                        @Html.ValidationMessageFor(model => model.url)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Descrição do Anúncio", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dsAnuncio)
                        @Html.ValidationMessageFor(model => model.dsAnuncio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Link do Vídeo", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.videoAnuncio)
                        @Html.ValidationMessageFor(model => model.videoAnuncio)
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.Label("Ramo de Atividade", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("raid", String.Empty)
                        @Html.ValidationMessageFor(model => model.raid)
                    </div>
                </div>                                

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                    <div>
                        @Html.ActionLink("Voltar", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
}
