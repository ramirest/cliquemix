@model Cliquemix.Models.tbAnuncio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>tbAnuncio</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.aid)

        <div class="form-group">
            @Html.Label("Título do Anúncio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tituloAnuncio)
                @Html.ValidationMessageFor(model => model.tituloAnuncio)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("URL do Anúncio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.url)
                @Html.ValidationMessageFor(model => model.url)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Descrição do Anúncio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dsAnuncio)
                @Html.ValidationMessageFor(model => model.dsAnuncio)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Vídeo do Anúncio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.videoAnuncio)
                @Html.ValidationMessageFor(model => model.videoAnuncio)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ramo de Atividade", "raid", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("raid", String.Empty)
                @Html.ValidationMessageFor(model => model.raid)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

        <input type="submit" value="Criar Anúncio" class="btn btn-default" />
        @Html.ActionLink("Cancelar", "Index")

    </div>    
}
