@model IEnumerable<Cliquemix.Models.tbAnuncio>

<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>
                Anunciante
                <small>Criar Anúncio</small>
            </h1>
            @RenderPage("~/Views/Breadcrumbs/Breadcrumbs-Anuncio-List.cshtml")
        </div>
    </div>
</div>


<div class="row">
    <!-- Basic Responsive Table -->
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-heading">
                <div class="portlet-title">
                      
                    <h4 class="flutuar">Lista de Anúncios</h4>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">Título</th>
                                <th class="text-center">Ramo</th>
                                <th class="text-center">Video</th>
                                @*<th class="text-center">Imagem</th>*@
                                <th class="text-center">Data de Criação</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr onclick="window.location = 'Edit/@item.aid'">
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.tituloAnuncio)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.tbRamoAtividade.descricao)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.videoAnuncio)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.dtCriacao)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.tbAnuncioStatus.dsStatus)
                                    </td>
                                    <td class="text-center">
                                        <a href="#" title="Visualizar" style="padding-right: 10px;">
                                            <i class="fa fa-search"></i>
                                        </a>
                                        <a href="#" title="Editar" style="padding-right: 10px;">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="#" title="Excluir">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            <thead class="rodape-tabela">
                                <tr>
                                    <th class="text-center">Título</th>
                                    <th class="text-center">Ramo</th>
                                    <th class="text-center">Video</th>
                                    @*<th class="text-center">Imagem</th>*@
                                    <th class="text-center">Data de Criação</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.portlet -->
    </div>
</div>


<div class="row">
    <div class="text-center">
        <ul class="pagination">
            <li>
                <a href="#">&laquo;</a>
            </li>
            <li class="active">
                <a href="#">1</a>
            </li>
            <li>
                <a href="#">2</a>
            </li>
            <li>
                <a href="#">3</a>
            </li>
            <li>
                <a href="#">&raquo;</a>
            </li>
        </ul>
    </div>
</div>