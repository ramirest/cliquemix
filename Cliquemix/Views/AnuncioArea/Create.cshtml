@model Cliquemix.Models.tbAnuncioArea

@{
    ViewBag.Title = "Create";
}

<h2>Área do Anúncio</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cadastro</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Título", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tituloAnuncioArea)
                @Html.ValidationMessageFor(model => model.tituloAnuncioArea)
            </div>
        </div>
        
        <input type="submit" value="Criar Anúncio" class="btn btn-default" />                
        @Html.ActionLink("Cancelar", "Index")
    </div>
}
