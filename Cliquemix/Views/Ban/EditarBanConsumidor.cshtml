@{ Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>
                Administrador
                <small>Editar Ban Consumidor</small>
            </h1>
            @RenderPage("~/Views/Breadcrumbs/Breadcrumbs-Ban-Consumidor-Editar.cshtml")
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-body">
                <ul id="userTab" class="nav nav-tabs">
                    <li class="active">
                        <a href="#overview" data-toggle="tab">Buscar - Consumidor</a>
                    </li>
                </ul>
                <div id="userTabContent" class="tab-content">
                    <div class="tab-pane fade in active" id="overview">
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form class="form-horizontal" role="form" action="#">
                                            <div class="form-group">
                                                <div class="col-lg-3">
                                                    <select class="form-control">
                                                        <option>Selecione</option>
                                                        <option>Código</option>
                                                        <option>Nome</option>
                                                        <option>CPF</option>
                                                        <option>RG</option>                                                      
                                                    </select>
                                                </div>

                                                <div class="col-lg-6">
                                                    <input type="text" class="form-control">
                                                </div>

                                                <div class="col-lg-3">
                                                    <button class="form-control btn-default" type="submit"><i class="fa fa-search"></i> Buscar</button>
                                                </div>
                                            </div>
                                        </form>

                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-body">
                <ul id="userTab" class="nav nav-tabs">
                    <li class="active">
                        <a href="#overview" data-toggle="tab">Dados - Consumidor</a>
                    </li>
                </ul>
                <div id="userTabContent" class="tab-content">
                    <div class="tab-pane fade in active" id="overview">
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="col-lg-3"></div>
                                        <div class="col-lg-6">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group">
                                                    <label for="CodAnunciante" class="col-lg-3 control-label">Código:</label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" id="CodAnunciante" placeholder="">
                                                    </div>
                                                </div>                                               

                                                <div class="form-group">
                                                    <label for="CodAnunciante" class="col-lg-3 control-label">CPF:</label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" id="CodAnunciante" placeholder="___.___.___-__">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label for="CodAnunciante" class="col-lg-3 control-label">RG:</label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" id="CodAnunciante" placeholder="">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label for="CodAnunciante" class="col-lg-3 control-label">Nome:</label>
                                                    <div class="col-lg-9">
                                                        <input type="text" class="form-control" id="CodAnunciante" placeholder="">
                                                    </div>
                                                </div>
                                              
                                            </form>
                                        </div>
                                        <div class="col-lg-3"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-body">
