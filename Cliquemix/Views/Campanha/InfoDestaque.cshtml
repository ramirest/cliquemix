@model Cliquemix.Models.tbDestaque

@try
{
    @Html.HiddenFor(m => m.did)
    <div class="portlet-body">
        <label class="col-sm-7" style="font-weight: bold">Título</label>
        <div class="clearfix"></div>
        @Html.LabelFor(m => m.tituloDestaque, new {@class = "col-sm-7", style = "font-weight: normal"})
