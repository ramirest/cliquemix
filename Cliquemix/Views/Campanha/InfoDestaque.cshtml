        <br />
        <label class="col-sm-4" style="font-size: 12px; font-weight: bold;">Tempo de Espera</label>
        <label class="col-sm-4" style="font-size: 12px; font-weight: bold;">Valor do Destaque</label>
        <label class="col-sm-4" style="font-size: 12px; font-weight: bold;">Tempo de Duração</label>
        <div class="clearfix"></div>
        @Html.LabelFor(m => m.tmpEspera, new {@class = "col-sm-4", style = "font-size: 12px; font-weight: normal"})
        <i class="fa fa-money"></i>@Html.LabelFor(m => m.qtCredito, new {@class = "col-sm-4", style = "font-size: 12px; font-weight: normal"})
        @Html.LabelFor(m => m.qtDuracao + " Dias", new {@class = "col-sm-4", style = "font-size: 12px; font-weight: normal"})
        <div class="clearfix"></div>
    </div>
}
catch (Exception)
{
    <div class="portlet-body">
        <label class="col-sm-7" style="font-weight: bold">Título</label>
        <div class="clearfix"></div>
        @Html.Label("Título", new { @class = "col-sm-7", style = "font-weight: normal" })
        <div class="clearfix"></div>
        <br />
        <label class="col-sm-4" style="font-size: 12px; font-weight: bold;">Tempo de Espera</label>
        <label class="col-sm-4" style="font-size: 12px; font-weight: bold;">Valor do Destaque</label>
        <label class="col-sm-4" style="font-size: 12px; font-weight: bold;">Tempo de Duração</label>
        <div class="clearfix"></div>
        @Html.Label("Tempo de Espera", new { @class = "col-sm-4", style = "font-size: 12px; font-weight: normal" })
        <i class="fa fa-money"></i>@Html.Label("Valor do Destaque", new { @class = "col-sm-4", style = "font-size: 12px; font-weight: normal" })
        @Html.Label("Duração (em dias)", new { @class = "col-sm-4", style = "font-size: 12px; font-weight: normal" })
        <div class="clearfix"></div>
    </div>
