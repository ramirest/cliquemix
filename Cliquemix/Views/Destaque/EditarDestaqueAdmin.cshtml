@{ Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>
                Administrador
                <small>Editar Destaques</small>
            </h1>
            @RenderPage("~/Views/Breadcrumbs/Breadcrumbs-Destaque-Editar-Admin.cshtml")
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-body">
                <ul id="userTab" class="nav nav-tabs">
                    <li class="active">
                        <a href="#overview" data-toggle="tab">Editar - Destaque</a>
                    </li>
                </ul>
                <div id="userTabContent" class="tab-content">
                    <div class="tab-pane fade in active" id="overview">
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form role="form">
                                            <div class="col-lg-6">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label for="titulo">Titulo</label>
                                                                <input class="form-control" type="text" id="titulo" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label for="preco">Preço</label>
                                                                <input class="form-control" type="text" id="preco" placeholder="R$ 0.00" style="max-width:200px;" />
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label for="espera">Tempo de espera (seg)</label>
                                                                <input class="form-control" type="number" id="espera" style="max-width:200px;" />
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label for="camp">Duração de campanha</label>
                                                                <select class="form-control" id="camp" style="max-width:200px;">
                                                                    <option>Selecione</option>
                                                                    <option>Semanal</option>
                                                                    <option>Mensal</option>
                                                                    <option>Semestral</option>
                                                                    <option>Anual</option>
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label for="qt">Qt</label>
                                                                <input class="form-control" type="number" id="qt" style="max-width:60px;" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label for="titulo">Imagem</label>
                                                                <div class="row">
                                                                    @*<div class="col-lg-2"></div>*@
                                                                    <div class="col-lg-10">
                                                                        <div class="thumbnail">
                                                                            <img id="imgUrl" src="~/fonts/img/sem_foto.png" alt="...">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label for="titulo">Descrição</label>
                                                                <div id="summernote"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="row">
                                                <div class="col-lg-10"></div>
                                                <div class="col-lg-2" style="margin-left:87%;">
                                                    <button type="submit" class="btn btn-default right"><i class="fa fa-floppy-o"></i> Criar</button>
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
