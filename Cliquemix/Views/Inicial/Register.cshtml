            function ErroCriarAnunciante(tipo) {
                var desc = "";

                if (tipo == 1) {
                    desc = "Login ou password não podem estar vazios [Cod: 002.00001]";
                } else if (tipo == 2) {
                    desc = "O Login informado já existe [Cod: 002.00002]";
                } else if (tipo == 3) {
                    desc = "A senha informada não é segura [Cod: 002.00003]";
                } else if (tipo == 4) {
                    desc = "A Senha e a Confirmação devem ser idênticas [Cod: 002.00004]";
                } else if (tipo == 5) {
                    desc = "A Razão Social do anunciante é requerido [Cod: 002.00005]";
                } else if (tipo == 6) {
                    desc = "O Nome Fantasia do anunciante é requerido [Cod: 002.00006]";
                } else if (tipo == 7) {
                    desc = "O CNPJ do anunciante é requerido [Cod: 002.00007]";
                } else if (tipo == 8) {
                    desc = "O CNPJ informado já está cadastrado, informe outro CNPJ. [Cod: 002.00008]";
                } else if (tipo == 9) {
                    desc = "O usuário informado não atende aos padrões do sistema.	[002.00009]";
                } else if (tipo == 10) {
                    desc = "O Patrocinador informado não existe no banco de dados do sistema [Cod: 002.00010]";
                }

                setTimeout(function() {
                    erro_message_demo(desc);
                }, 1000);
            }

            function retornaCodCampanha(item) {
                document.getElementById('pCodCampanha').value = item;
            }

            function limparAviso() {
                Messenger().hideAll();
            }

            function success_message_demo(erro) {
                Messenger.options = {
                    extraClasses: 'messenger-fixed messenger-on-bottom messenger-on-right',
                    theme: 'flat'
                }
                Messenger().post({
                    message: erro,
                    type: 'success',
                    showCloseButton: true
                });
            }

            function erro_message_demo(erro) {
                Messenger.options = {
                    extraClasses: 'messenger-fixed messenger-on-bottom messenger-on-right',
                    theme: 'flat'
                }
                Messenger().post({
                    message: erro,
                    type: 'error',
                    showCloseButton: true
                });
            };

            function validarCampos() {
                var t = document.getElementById('tipo');
                if (!(t.value == 0) || (t.value == 1)) {
                    t.value = 0;
                }
            }

            function validarPatrocinador() {
                var n = document.getElementById('patrocinador').value;
                $.ajax({
                    dataType: "json",
                    type: "GET",
                    url: "/Inicial/ValidaPatrocinador/?nome=" + n,
                    success: function(data) {
                        $(data).each(function() {
                            if (data.tpError == "002.00010") {
                                //Caso o valor for inválido, altera o estado de exibição das divs e Informa que o valor está inválido
                                $("#msgValidar_Patrocinador").attr("class", "form-group has-error");
                                document.getElementById("msgValidar_Patrocinador").innerHTML =
                                    '<span class="help-block"><i class="fa fa-warning"></i> ' +
                                    '<strong>Inválido!</strong> ' + data.Error + '</span>';
                            } else {
                                //Caso o valor for Válido, altera o estado de exibição das divs e Informa que o valor está válido
                                $("#msgValidar_Patrocinador").attr("class", "form-group has-success");
                                document.getElementById("msgValidar_Patrocinador").innerHTML =
                                    '<span class="help-block"><i class="fa fa-check"></i> ' +
                                    '<strong>OK!</strong> O Patrocinador informado é válido!"</span>';
                            }
                        });
                    }
                });
            }

            </script>
        

