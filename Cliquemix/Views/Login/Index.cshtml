@model Cliquemix.Models.LoginModel
@using System.Web.Mvc;

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<script src="@Url.Content("~/Scripts/plugins/validate/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Outros/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.LabelFor(m => m.Username)
    @Html.TextBoxFor(m => m.Username)
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)
    
    <input input type="submit"/>
    @Html.ValidationSummary()
}