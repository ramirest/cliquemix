@model Cliquemix.Models.tbAnuncianteEndereco
<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>
                Anunciante
                <small>Perfil</small>
            </h1>
            @RenderPage("~/Views/Breadcrumbs/Breadcrumbs-Anunciante-Perfil.cshtml")
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-default">
                <div class="portlet-body">
                    <ul id="userTab" class="nav nav-tabs">
                        <li class="active">
                            <a href="#overview" data-toggle="tab">Dados de Endereço</a>
                        </li>
                    </ul>
                    <div id="userTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="overview">
                            <div class="row">
                                <div class="col-lg-9 col-md-9">
                                    <div class="form-group col-lg-3">
                                        <label>CEP</label>
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.cep, new { @class="form-control", maxlength="8" })
                                    </div>
                                    <div class="clearfix"></div>

                                    <div class="form-group col-lg-7">
                                        @Html.Label("Endereço")
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.endereco, new { @class = "form-control", maxlength = "150" })
                                    </div>
                                    
                                    <div class="form-group col-lg-2">
                                        @Html.Label("Número")
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.numero_endereco, new { @class = "form-control", maxlength = "10" })
                                    </div>

                                    <div class="form-group col-lg-3">
                                        @Html.Label("Complemento")
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.complemento_endereco, new { @class = "form-control", maxlength = "50" })
                                    </div>

                                    <div class="form-group col-lg-5">
                                        @Html.Label("Bairro")
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.nomeBairro, new { @class = "form-control", maxlength = "50" })
                                    </div>

                                    <div class="form-group col-lg-5">
                                        @Html.Label("Cidade")
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.nomeCidade, new { @class = "form-control", maxlength = "50" })
                                    </div>

                                    <div class="form-group col-lg-2">
                                        @Html.Label("Estado")
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.ufEstado, new { @class = "form-control", maxlength = "2" })
                                    </div>

                                    <div class="form-group col-lg-5">
                                        @Html.Label("País")
                                        <div class="clearfix"></div>
                                        @Html.TextBoxFor(model => model.nomePais, new { @class = "form-control", maxlength = "20" })
                                    </div>
                                    
                                    <div class="clearfix"></div>
                                    <div class="form-group col-lg-9">
                                        <button type="submit" class="btn btn-default" id="save" value="save">
                                            <i class="fa fa-floppy-o"></i>
                                            Salvar
                                        </button>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4">
                                    <div class="portlet portlet-default">
                                        <div id="defaultPortlet" class="panel-collapse collapse in">
                                            <div class="portlet-body">
                                                <h3>Atualizar perfil</h3>
                                                <ul id="userSettings" class="nav nav-pills nav-stacked">
                                                    <li>
                                                        <a href="~/PerfilAnunciante/PerfilAnunciante" ><i class="fa fa-reply fa-fw"></i> Voltar</a>
                                                    </li>

                                                    <li>
                                                        <a href="~/PerfilAnunciante/EditarPerfilDadosEmpresa"><i class="fa fa-building-o fa-fw"></i> Dados da Empresa</a>
                                                    </li>

                                                    <li>
                                                        <a href="~/PerfilAnunciante/EditarPerfilDadosContato"><i class="fa fa-phone fa-fw"></i> Dados de Contato</a>
                                                    </li>

                                                    <li class="active">
                                                        <a href="~/PerfilAnunciante/EditarPerfilDadosEndereco"><i class="fa fa-globe fa-fw"></i>Dados de Endereço</a>
                                                    </li>

                                                    <li>
                                                        <a href="~/PerfilAnunciante/EditarPerfilDadosUsuario"><i class="fa fa-user fa-fw"></i>Dados de Usuário</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}