<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>
                Anunciante
                <small>Perfil</small>
            </h1>
            @RenderPage("~/Views/Breadcrumbs/Breadcrumbs-Anunciante-Perfil.cshtml")
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-body">
                <ul id="userTab" class="nav nav-tabs">
                    <li class="active">
                        <a href="#overview" data-toggle="tab">Perfil - Dados do Empresa</a>
                    </li>
                </ul>
                <div id="userTabContent" class="tab-content">
                    <div class="tab-pane fade in active" id="overview">
                        <div class="row">
                            <div class="col-lg-9 col-md-9">
                                <form role="form">
                                    <h4 class="page-header">Dados de Usuário:</h4>
                                    <div class="form-group col-lg-6">
                                        <div class="input-group">
                                            <label>Senha Atual </label>
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input type="text" class="form-control" value="" >
                                        </div>
                                    </div>

                                    <div class="clearfix"></div>
                                    <div class="form-group col-lg-6">
                                        <div class="input-group">
                                            <label>Nova Senha </label>
                                            <span class="input-group-addon"><i class="fa fa-unlock"></i></span>
                                            <input type="password" class="form-control" value="">
                                        </div>
                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="form-group col-lg-6">
                                        <div class="input-group">
                                            <label>Conf. Senha </label>
                                            <span class="input-group-addon"><i class="fa fa-unlock-alt"></i></span>
                                            <input type="password" class="form-control" value="">
                                        </div>
                                    </div>



                                    <div class="form-group col-lg-12"></div>
                                    <div class="form-group col-lg-12"></div>
                                    <div class="form-group col-lg-12"></div>

                                    



                                    <div class="form-group col-lg-9">
                                       
                                        <button type="submit" class="btn btn-default" id="save" value="save">
                                            <i class="fa fa-floppy-o"></i>
                                            Salvar
                                        </button>
                                    </div>


                                </form>
                            </div>

                            <div class="col-lg-3 col-md-4">
                                <div class="portlet portlet-default">
                                    <div id="defaultPortlet" class="panel-collapse collapse in">
                                        <div class="portlet-body">
                                            <h3>Atualizar perfil</h3>
                                            <ul id="userSettings" class="nav nav-pills nav-stacked">
                                                <li>
                                                    <a href="~/PerfilAnunciante/PerfilAnunciante" ><i class="fa fa-reply fa-fw"></i> Voltar</a>
                                                </li>

                                                <li>
                                                    <a href="~/PerfilAnunciante/EditarPerfilDadosEmpresa"><i class="fa fa-building-o fa-fw"></i> Dados da Empresa</a>
                                                </li>

                                                <li>
                                                    <a href="~/PerfilAnunciante/EditarPerfilDadosContato"><i class="fa fa-phone fa-fw"></i> Dados de Contato</a>
                                                </li>

                                                <li>
                                                    <a href="~/PerfilAnunciante/EditarPerfilDadosEndereco"><i class="fa fa-globe fa-fw"></i>Dados de Endereço</a>
                                                </li>

                                                <li class="active">
                                                    <a href="~/PerfilAnunciante/EditarPerfilDadosUsuario"><i class="fa fa-user fa-fw"></i>Dados de Usuário</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

