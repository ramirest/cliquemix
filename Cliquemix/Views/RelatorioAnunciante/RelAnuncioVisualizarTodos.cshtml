@model IEnumerable<Cliquemix.Models.VwRelatorioAnuncianteAnuncios_Todos>

<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>
                Relatório
                <small>Anúncios</small>
            </h1>
            @RenderPage("~/Views/Breadcrumbs/Breadcrumbs-Anunciante-Relatorio-Anuncios-Visualizar.cshtml")
        </div>
    </div>
</div>

<!-- PAGE LEVEL PLUGIN STYLES -->
<link href="~/Content/plugins/datatables/datatables.css" rel="stylesheet">

<!-- THEME DEMO STYLES - Use these styles for reference if needed. Otherwise they can be deleted. -->
<link href="~/Content/demo.css" rel="stylesheet">


<script>
    //DataTables Initialization
    setTimeout(function() {
        $('#table_RelAnuncioVisuTodos').dataTable();
    }, 20);
</script>

<!-- begin ADVANCED TABLES ROW -->
<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4>Todos os Anúncios</h4>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table id="table_RelAnuncioVisuTodos" class="table table-striped table-bordered table-hover table-green">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">TÍTULO</th>
                                <th class="text-center">CATEGORIA</th>
                                <th class="text-center">STATUS</th>
                                <th class="text-center">VÍDEO</th>
                                <th class="text-center">IMAGEM</th>
                                <th class="text-center">DATA DE CRIAÇÃO</th>
                            </tr>
                        </thead>
                        <tbody>
                            @try
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.aid)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.tituloAnuncio)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.dsCategoria)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.dsStatus)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.VIDEO)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.IMAGEM)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.dtCriacao)
                                        </td>
                                    </tr>
                                }
                            }
                            catch (Exception e)
                            {
                                <br />
                                <label style="color: #34495E; font-weight: normal; font-size: 20px">
                                    Não existe anúncio nessa campanha
                                </label>

                                <div class="clearfix"></div>
                                <div class="clearfix"></div>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.portlet-body -->
        </div>
        <!-- /.portlet -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-4">
        <div class="btn-group btn-group-justified">
            <button type="button" class="btn btn-default" role="button" style="width: 140px;">
                <i class="fa fa-angle-double-left"></i> Voltar
            </button>
            <button type="button" class="btn btn-green" role="button" style="width: 140px;">PDF</button>
        </div>
    </div>
</div>


<!-- PAGE LEVEL PLUGIN SCRIPTS -->
<script src="~/Scripts/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/plugins/datatables/datatables-bs3.js"></script>
<!-- THEME SCRIPTS -->
<script src="~/Scripts/flex.js"></script>
<script src="~/Scripts/demo/advanced-tables-demo.js"></script>