@model Cliquemix.Models.tbUsers

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>
                    Usuário
                    <small> Detalhes</small>
                </h1>
                @RenderPage("~/Views/Breadcrumbs/Breadcrumbs.cshtml")
            </div>

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.Label("Código", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.uid)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Usuário", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.username)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Tipo de Usuário", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.tbUsersTipo.dsUsersTipo)
                    </div>
                </div>

            </div>
            <div>
                @Html.ActionLink("Editar", "Edit", new { id = Model.uid }) |
                @Html.ActionLink("Voltar", "Index")
            </div>
        </div>
    </div>
</div>
