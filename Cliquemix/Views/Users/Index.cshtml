@model IEnumerable<Cliquemix.Models.tbUsers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>
                Usuário
                <small> Lista</small>
            </h1>
            @RenderPage("~/Views/Breadcrumbs/Breadcrumbs.cshtml")
        </div>
        <p>
            @Html.ActionLink("Novo Usuário", "Create")
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Código")
                </th>
                <th>
                    @Html.DisplayName("Usuário")
                </th>
                <th>
                    @Html.DisplayName("Tipo de Usuário")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.uid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tbUsersTipo.dsUsersTipo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.uid }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.uid }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.uid })
                    </td>
                </tr>
            }

        </table>
    </div>
    <!-- /.col-lg-12 -->
</div>
